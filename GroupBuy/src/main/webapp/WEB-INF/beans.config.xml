<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


	<bean id="dataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
	  <property name="url" value="jdbc:sqlserver://localhost:1433;database=GroupBuy"/>
	  <property name="driverClassName" value="com.microsoft.sqlserver.jdbc.SQLServerDriver"/>
	  <property name="username" value="sa"/>
	  <property name="password" value="passw0rd"/>
	</bean>


	<bean id="groupInfoDAOJdbc" class="creategroup.model.dao.GroupInfoDAOJdbc">
	  <constructor-arg ref="dataSource"/>
	</bean>
	<bean id="groupInfoDetailsDAOJdbc" class="creategroup.model.dao.GroupInfoDetailsDAOJdbc">
	 <constructor-arg ref="dataSource"/>
	</bean>
    <bean id="creatGroupService" class="creategroup.model.CreateGroupService">
      <constructor-arg ref="groupInfoDAOJdbc"/>
    </bean>
     

</beans>
